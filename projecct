<script>
  document.addEventListener("DOMContentLoaded", function() {
    const links = document.querySelectorAll('.nav-link');
    links.forEach(function(link) {
      link.addEventListener('click', function(e) {
        e.preventDefault(); // Empêche le comportement par défaut du lien
        const targetId = this.getAttribute('data-target'); // Récupère l'identifiant cible
        const targetElement = document.getElementById(targetId); // Récupère l'élément cible
        if (targetElement) {
          targetElement.scrollIntoView({ behavior: 'smooth' }); // Fait défiler jusqu'à l'élément cible
        }
      });
    });
  });
  </script>
  </div> <!-- Fermeture de la div #main-content -->

  <a href="#" id="back-to-top" class="btn btn-primary btn-lg back-to-top" role="button" title="Retour en haut de page">&uarr; Haut</a>
  
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const backToTopBtn = document.getElementById('back-to-top');
  
      window.addEventListener('scroll', function() {
        if (window.pageYOffset > 100) { // Si la position de défilement est supérieure à 100 pixels
          backToTopBtn.classList.add('visible'); // Ajoute la classe 'visible' pour afficher le bouton
        } else {
          backToTopBtn.classList.remove('visible'); // Retire la classe 'visible' pour masquer le bouton
        }
      });
  
      backToTopBtn.addEventListener('click', function(e) {
        e.preventDefault(); // Empêche le comportement par défaut du lien
        window.scrollTo({ top: 0, behavior: 'smooth' }); // Fait défiler jusqu'en haut de la page en douceur
      });
    });
  </script>
  
